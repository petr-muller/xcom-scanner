<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.larpy.xcom.fieldscanner_v3"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cz.larpy.xcom.fieldscanner_v3.HubActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cz.larpy.xcom.fieldscanner_v3.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.larpy.xcom.fieldscanner_v3.ScannerActionActivity"
            android:label="@string/title_activity_scanner_action"
            android:parentActivityName="cz.larpy.xcom.fieldscanner_v3.HubActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.larpy.xcom.fieldscanner_v3.HubActivity" />
        </activity>
    </application>

</manifest>
